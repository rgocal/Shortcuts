<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingTop="5dp"
    android:id="@+id/whole"
    android:background="#80222222">

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--1-->
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="#80EEEEEE">
                <RelativeLayout
                    android:id="@+id/widget1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:elevation="19dp"
                    android:gravity="center"
                    android:background="#80bfbfbf"/>
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/label1"
                    android:tag="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>
                <Button
                    android:id="@+id/launch1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tag="launch1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/draw_open"/>
            </RelativeLayout>

            <!--2-->
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="#80EEEEEE">
                <RelativeLayout
                    android:id="@+id/widget2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:elevation="19dp"
                    android:gravity="center"
                    android:background="#80bfbfbf"/>
                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/label2"
                    android:tag="2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>
                <Button
                    android:id="@+id/launch2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tag="launch2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/draw_open"/>
            </RelativeLayout>

            <!--3-->
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="#80EEEEEE">
                <RelativeLayout
                    android:id="@+id/widget3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:elevation="19dp"
                    android:gravity="center"
                    android:background="#80bfbfbf"/>
                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/label3"
                    android:tag="3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>
                <Button
                    android:id="@+id/launch3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tag="launch3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/draw_open"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/showWidget"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="13dp"
        android:elevation="9dp"
        android:background="@drawable/draw_widget"/>

</RelativeLayout>